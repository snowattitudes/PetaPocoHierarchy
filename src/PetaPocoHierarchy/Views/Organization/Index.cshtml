@model IEnumerable<PetaPocoHierarchy.Models.Organization>
@{
	ViewBag.Title = "PetaPoco Hierarchical Data";
}
<h1>PetaPoco Hierarchical Data</h1>
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Hierarchy</th>
			<th>Name</th>
			<th>Code</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var organization in Model) {
			<tr>
				<td>@organization.Hierarchy</td>
				<td>@organization.Name</td>
				<td>@organization.OrganizationCode</td>
			</tr>
		}
	</tbody>
</table>